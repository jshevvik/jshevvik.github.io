---
import '../styles/tailwind.css'
import '../assets/scss/index.scss'

import SiteMeta from '../components/SiteMeta.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { ClientRouter } from 'astro:transitions'

const {
  title = 'Portafolio de Iuliia Shevchenko',
  description = 'Desarrolladora de aplicaciones multiplataforma. Android/Java/Php, web y accesibilidad.',
  url = Astro.site,
  image = 'social-preview-image.png',
  author = 'Iuliia Shevchenko',
} = Astro.props

// Detect dark mode preference (server-side fallback to false)
const isDark = Astro.cookies?.get('theme')?.value === 'dark' ||
  (typeof window === 'undefined'
    ? false
    : window.matchMedia('(prefers-color-scheme: dark)').matches);
---

<html lang="es" dir="ltr" class={isDark ? 'dark' : ''}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <SiteMeta title={title} description={description.substring(0, 100)} url={url} image={image} author={author} />

    <!-- Enable Astro View Transitions for all browsers -->
    <ClientRouter />

    <style is:global>
    /* Claro */
    :root {
      --color-secondary-border: #0477b1 !important;
      --color-secondary-bg: #2eb4f8 !important;
      --color-secondary-text: hsl(214.3 30.4% 4.5%) !important;
    }

 

    /* Oscuro por clase .dark en <html> (si usas modo oscuro por clase) */
    html.dark {
      --color-secondary-border: #2eb4f8 !important;
      --color-secondary-bg: #0477b1 !important;
      --color-secondary-text: hsl(0 0% 100%) !important;
    }
  </style>
  </head>
  <body>
    <Header />
    <main id="main-content" transition:animate="fade">
      <slot />
    </main>
    <Footer />
    
    <style lang="scss" is:global>
      @use '../assets/scss/base/mixins' as *;

      // sticky footer on low content pages
      html,
      body {
        height: 100%;
      }

      body {
        display: flex;
        flex-direction: column;
        overflow-x: clip;

        main {
          flex: 1 0 auto;
        }

        footer {
          flex-shrink: 0;
        }
      }

      pre {
        border: 2px solid var(--link-color);
        border-radius: 0.35rem;
        padding: 1rem;
      }

      .card {
        a {
          @include text-decoration(transparent, var(--foreground-color), 4px, 2px);
        }
      }
      
    </style>
    
  </body>
</html>
