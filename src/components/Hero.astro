---
import { Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'

interface Props {
  src?: string
  alt?: string
  title?: string         // título si no usas <slot>
  subtitle?: string      // opcional
  primaryHref?: string
  primaryText?: string
  secondaryHref?: string
  secondaryText?: string
}

const {
  src = '/here-img.webp',
  alt = 'Retrato de Julia, desarrolladora Android y web',
  title = 'Hola, soy Julia',
  subtitle = 'Desarrollo Android (Java) y Web. Busco mi primera oportunidad como desarrolladora junior.',
  primaryHref = '/portfolio',
  primaryText = 'Ver proyectos',
  secondaryHref = 'mailto:jshevvik@.com',
  secondaryText = 'Escríbeme',
}: Props = Astro.props
---

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-6 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
         
          <slot><span class="text-gradient">{title}</span></slot>
        </h1>

        {subtitle && (
          <p class="text-lg opacity-90 text-center md:text-left max-w-prose">{subtitle}</p>
        )}

        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <Link href={primaryHref} isButton type="primary" animateOnHover animationType="boop">
            <Icon aria-hidden="true" name="lucide:sparkles" size="1.5rem" />
            {primaryText}
          </Link>
          {secondaryHref && secondaryText && (
            <Link href={secondaryHref} isButton type="secondary" animateOnHover animationType="boop">
              <Icon aria-hidden="true" name="lucide:mail" size="1.5rem" />
              {secondaryText}
            </Link>
          )}
        </div>
      </div>

      <Image
        class="hidden lg:block"
        src={src}
        alt={alt}
        decoding="async"
        width={800}
        height={600}
        loading="eager"
      />
    </div>
  </div>
</section>

<style lang="scss">
  h1 { text-wrap: unset; }
  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>


